{
  "version": "3.1",
  "services": {
    "nginx": {
      "image": "linkit360ru/xmp-nginx:latest",
      "restart": "always",
      "links": [
        "php"
      ],
      "environment": [
        "PROJECT_ENV=testing"
      ],
      "volumes": [
        "web-app:/app"
      ]
    },
    "php": {
      "image": "linkit360ru/xmp-php:latest",
      "restart": "always",
      "environment": [
        "PROJECT_ENV=testing"
      ],
      "volumes": [
        "web-app:/app"
      ]
    },
    "go": {
      "image": "linkit360ru/xmp-go:latest",
      "restart": "always",
      "links": [
        "php"
      ],
      "environment": [
        "PROJECT_ENV=testing"
      ]
    }
  },
  "volumes": {
    "web-app": {
    }
  }
}
